<div class="row h-100 w-100 mb-4">
    <div class="col-sm">
    <h4>All Ingredients</h4>
        <div class="mb-2">
            <select multiple
                    class="form-select"
                    @bind="devicesToAssigne">
                @foreach (var unassigned in NotAssignedIngredients)
                {
                    <option value=@unassigned.Id>
                        @unassigned.Name
                    </option>
                }
            </select>
        </div>
    </div>


    <div class="col-sm-auto my-auto d-none d-sm-block">
        <div class="mb-2">
            <button @onclick=AssigneSelected class="btn btn-primary">
                <i class="bi bi-arrow-right"></i>
            </button>
        </div>
        <div class="mb-2">
            <button @onclick=UnassigneSelected class="btn btn-primary">
                <i class="bi bi-arrow-left"></i>
            </button>
        </div>
    </div>


    <div class="col-sm-auto text-center d-block d-sm-none">
        <div class="mb-2">
            <button @onclick=AssigneSelected class="btn btn-primary me-2">
                <i class="bi bi-arrow-down"></i>
            </button>
            <button @onclick=UnassigneSelected class="btn btn-primary me-2">
                <i class="bi bi-arrow-up"></i>
            </button>
        </div>
    </div>

    <div class="col-sm">
    <h4>Added Ingredients</h4>
        <div class="mb-2">
            <select multiple
                    class="form-select"
                    @bind="devicesToUnassigne">
                @foreach (var assigned in AssignedIngredients)
                {
                    <option value=@assigned.Id>
                        @assigned.Name
                    </option>
                }
            </select>
        </div>
    </div>
</div>
